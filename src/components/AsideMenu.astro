---
import LibraryIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import SpotifyIcon from "@/icons/Spotify.astro";
import RadioIcon from "@/icons/Radio.astro";
import SideMenuItem from "./SideMenuItem.astro";
import SideMenuCard from "./SideMenuCard.astro";
import SideMenuRadio from "./SideMenuRadio.astro";
import SearchBar from "./SearchBar.astro";


import { playlists } from "@/lib/data";
import { fmRadios } from "@/lib/radioData";
---

<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
<!--             <SideMenuItem>
                <SpotifyIcon />
            </SideMenuItem> -->

            <SideMenuItem href="/">
                <HomeIcon />
                 Home 
            </SideMenuItem>

            <SideMenuItem href="/#">
                <SearchIcon />
                SearchBar
            </SideMenuItem>

        </ul>
    </div>

    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href="/">
                <LibraryIcon />
                 Your library
            </SideMenuItem>
            {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
            
            <SideMenuItem >
                <RadioIcon />
                 Your radio
            </SideMenuItem>
             {fmRadios.map((fmRadio) => <SideMenuRadio fmRadio={fmRadio} />)}

        </ul>
    </div>
</nav>
